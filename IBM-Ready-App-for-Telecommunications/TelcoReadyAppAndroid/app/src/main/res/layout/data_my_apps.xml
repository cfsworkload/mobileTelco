<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_left_margin"
        android:layout_marginStart="@dimen/layout_left_margin"
        android:layout_marginRight="@dimen/layout_right_margin"
        android:layout_marginEnd="@dimen/layout_right_margin"
        android:layout_marginTop="@dimen/top_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/app_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/image_right_margin"
            android:layout_marginEnd="@dimen/image_right_margin"
            tools:src="@android:drawable/ic_lock_lock"
            tools:ignore="ContentDescription"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <com.ibm.mil.readyapps.telco.views.RobotoTextView
                android:id="@+id/app_offer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/app_title_size"
                />

            <com.ibm.mil.readyapps.telco.views.RobotoTextView
                android:id="@+id/app_offer_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/text_top_padding"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/app_cost_size" />

            <com.ibm.mil.readyapps.telco.views.RobotoTextView
                android:id="@+id/add_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/top_margin"
                android:layout_marginTop="@dimen/add_button_top_margin"
                android:textColor="@color/light_indigo"
                android:textSize="@dimen/confirm_button_size"
                tools:text="@string/add_app_offer"
                />

        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_line_height"
        android:layout_marginLeft="@dimen/layout_left_margin"
        android:layout_marginStart="@dimen/layout_left_margin"
        android:layout_marginRight="@dimen/layout_right_margin"
        android:layout_marginEnd="@dimen/layout_right_margin"
        android:background="@color/light_gray" />

</LinearLayout>